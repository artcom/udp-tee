<%= form_for @output, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :nick, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :nick, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :fan_out_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :fan_out_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :ip, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :ip, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :port, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :port, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :open, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :open, :class => 'check_box' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                outputs_path, :class => 'btn' %>
  </div>
<% end %>
