<%- model_class = @socket_connector.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nick) %>:</strong></dt>
  <dd><%= @socket_connector.nick %></dd>
  <dt><strong>IP:</strong></dt>
  <dd><%= @socket_connector.ip %></dd>
  <dt><strong><%= model_class.human_attribute_name(:port) %>:</strong></dt>
  <dd><%= @socket_connector.port %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              socket_connectors_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_socket_connector_path(@socket_connector), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              socket_connector_path(@socket_connector),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
