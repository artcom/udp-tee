<%- model_class = UdpSocket.new.class -%>
<h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:nick) %></th>
      <th>IP</th>
      <th><%= model_class.human_attribute_name(:port) %></th>
      <!--th><%= model_class.human_attribute_name(:created_at) %></th-->
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @udp_sockets.each do |udp_socket| %>
      <tr>
        <td><%= link_to udp_socket.id, udp_socket_path(udp_socket) %></td>
        <td><%= udp_socket.nick %></td>
        <td><%= udp_socket.ip %></td>
        <td><%= udp_socket.port %></td>
        <!--td><%=l udp_socket.created_at %></td-->
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_udp_socket_path(udp_socket), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      udp_socket_path(udp_socket),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_udp_socket_path,
            :class => 'btn btn-primary' %>
