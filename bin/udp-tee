#!/usr/bin/env ruby

require 'rubygems'
require 'bundler/setup'
require 'applix'

$:.unshift File.join(File.dirname(__FILE__), '..', 'lib')
require 'udp_tee'

Defaults = {
  fan:  nil, # just take the first fan-out we can find
  env:  :production,
}

class App
  def initialize config = {}
    @config = config
  end

  def load_rails_env
    # http://zerowidth.com/2011/03/18/standalone-script-runner-bin-scripts-in-rails.html
    require File.expand_path('../../config/boot',  __FILE__)
    require File.expand_path('../../config/application',  __FILE__)
    Rails.env = @config[:env].to_s
    print " -- loading rails env(#{Rails.env}) .. "
    Rails.application.require_environment!
    puts "done."
  end

  def run
    UdpTee::Em.start(fan_out, @config)
  end

  def info *av
    puts "args, config: #{av}, #{@config}"
  end

  private
  def fan_out
    @fan_put ||= (
      if nick = @config[:nick]
        FanOut.find_by_nick(nick)
      else
        FanOut.first
      end
    )
  end
end

Applix.main(ARGV, Defaults) do

  def usage 
    puts <<-EOT

#{__FILE__} <options> <command> 

commands are: 

  run: 
  
 info:

    EOT
    exit 0
  end

  prolog do |_, config|
    usage if (config[:help] or config[:h])
    $app = App.new(config)
    $app.load_rails_env
  end

  any do |*av, config|
    action = av.shift || :run
    $app.send(action, *av)
  end
end
